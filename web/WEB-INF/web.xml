<?xml version="1.0" encoding="UTF-8"?>
<web-app version="4.0" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd">
    <servlet>
        <servlet-name>GreetingServletPath</servlet-name>
        <servlet-class>com.devpanks.GreetingServletPath</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AddUserServlet</servlet-name>
        <servlet-class>com.devpanks.AddUserServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AdminSection</servlet-name>
        <servlet-class>com.devpanks.AdminSection</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>GreetingServletPath</servlet-name>
        <url-pattern>/GreetingServletPath</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AddUserServlet</servlet-name>
        <url-pattern>/AddUserServletPath</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AdminSection</servlet-name>
        <url-pattern>/AdminSection</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
